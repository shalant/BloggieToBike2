@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<section id="home" class="hero">
    <div class="hero-content">
        <h1>Explore the Area on Two Wheels</h1>
        <h4>Join us for breathtaking cycling adventures and unforgettable experiences.</h4>
        <br />
        <a href="/events" class="cta-button">Upcoming Events</a>
    </div>
</section>

<section id="about" class="about-section">
    <div class="about-content">
        <h2>About Us</h2>
        <p>We are a passionate community of cyclists dedicated to sharing the joy of cycling and exploring new horizons.</p>
    </div>
</section>

<section id="events" class="events-section">
    <a href="/Events">
        <h2>Upcoming Events</h2>
    </a>
    <!-- Event cards can be added here -->

</section>

<section id="routes" class="routes-section">
    <a href="/BikeRoutes">
        <h2>Popular Routes</h2>
    </a>

    <!-- Route cards can be added here -->
</section>

<section id="contact" class="contact-section">
    <h2>Contact Us</h2>
    <p>Have questions or ready to join an adventure? Get in touch with us!</p>
    <a href="mailto:info@cyclingadventures.com" class="cta-button">Email Us</a>
</section>


<div class="container col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-5 py-5">
        <div class="col-12 col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3">
                Bloggie - The Dev Blog
            </h1>
            <p class="lead">Bloggie is the home to coding blogs covering a vast range of
                topics like HTML, CSS, Javascript, ASP.NET, C#, Angular, SQL, etc.
                Want to read the laterst dev articles? Join the bloggie and get weekly blogs right
                in yo email
            </p>
        </div>
        <div class="col-12 col-lg-6">
            <img src="https://images.pexels.com/photos/196655/pexels-photo-196655.jpeg" 
                class="d-block mx-lag-auto img-fluid width=400px" />
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">

            <h2 class="mb-5 display-3">Blogs</h2>

            <div class="mb-5">
                @if(Model.Tags != null && Model.Tags.Any())
                {
                    foreach (var tag in Model.Tags)
                    {
                        <a href="/tags/@tag.Name">
                            <span class="badge bg-dark">@tag.Name</span>

                        </a>
                    }
                }
            </div>

            @if (Model.Routes != null && Model.Routes.Any())
            {
                foreach (var route in Model.Routes)
                {
                    <div class="mb-5 bg-light box-shadow">
                        <img src="@route.FeaturedImageUrl" alt="@route.Name" class="mb-2 d-block img-fluid" />
                        <div class="px-4 py-4">
                            <h2 class="mb-2">@route.Name</h2>
                            <p>
                                Author: @route.Author
                                <br />
                                Date Published: @route.PublishedDate.ToShortDateString()
                            </p>
                            <p class="mb-2">@route.ShortDescription</p>
                            <a href="/blog/@route.StravaLink" class="btn btn-dark">Read More</a>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>



