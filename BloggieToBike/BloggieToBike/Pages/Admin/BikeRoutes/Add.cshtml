<div class="bg-secondary bg-opacity-10 py-2 mb-5">
    <div class="container">
        <h1>Add Bike Route</h1>
    </div>
</div>

<div>
    <div class="container">
        <form method="post">
            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" required class="form-control" id="name" asp-for="AddBikeRouteRequest.Name">
                <span class="text-danger" asp-validation-for="AddBikeRouteRequest.Name"></span>
            </div>
            <div class="mb-3">
                <label for="length" class="form-label">Length</label>
                <input type="number" required class="form-control" id="length" asp-for="AddBikeRouteRequest.Length">
                <span class="text-danger" asp-validation-for="AddBikeRouteRequest.Length"></span>
            </div>
            <div class="mb-3">
                <label for="elevation" class="form-label">Elevation</label>
                <input type="number" required class="form-control" id="elevation" asp-for="AddBikeRouteRequest.Elevation">
                <span class="text-danger" asp-validation-for="AddBikeRouteRequest.Elevation"></span>
            </div>
            <div class="mb-3">
                <label for="direction" class="form-label">Direction</label>
                <textarea class="form-control" required id="direction" asp-for="AddBikeRouteRequest.Direction"></textarea>
                <span class="text-danger" asp-validation-for="AddBikeRouteRequest.Direction"></span>
            </div>
            <div class="mb-3">
                <label for="content" class="form-label">Content</label>
                <textarea class="form-control" required id="content" asp-for="AddBikeRouteRequest.Content"></textarea>
                <span class="text-danger" asp-validation-for="AddBikeRouteRequest.Content"></span>
            </div>
            <div class="mb-3">
                <label for="shortDescription" class="form-label">Short Description</label>
                <input type="text" class="form-control" required id="shortDescription" asp-for="AddBikeRouteRequest.ShortDescription">
                <span class="text-danger" asp-validation-for="AddBikeRouteRequest.ShortDescription"></span>
            </div>
            <div class="mb-3">
                <label for="featuredImageUrl" class="form-label">Featured Image Url</label>
                <input type="text" class="form-control" required id="featuredImageUrl" asp-for="AddBikeRouteRequest.FeaturedImageUrl">
                <span class="text-danger" asp-validation-for="AddBikeRouteRequest.FeaturedImageUrl"></span>
            </div>

            <div class="mb-3">
                <label for="stravaLink" class="form-label">Strava Link</label>
                <input type="text" class="form-control" required id="stravaLink" asp-for="AddBikeRouteRequest.StravaLink">
                <span class="text-danger" asp-validation-for="AddBikeRouteRequest.StravaLink"></span>
            </div>
            <div class="mb-3">
                <label for="publishedDate" class="form-label">Published Date</label>
                <input type="date" class="form-control" required id="publishedDate" asp-for="AddBikeRouteRequest.PublishedDate">
                <span class="text-danger" asp-validation-for="AddBikeRouteRequest.PublishedDate"></span>
            </div>
            <div class="mb-3">
                <label for="author" class="form-label">Author</label>
                <input type="text" class="form-control" required id="author" asp-for="AddBikeRouteRequest.Author">
                <span class="text-danger" asp-validation-for="AddBikeRouteRequest.Author"></span>
            </div>

            <div class="mb-3">
                <label for="" class="form-label">Tags (comma separated)</label>
                <input type="text" class="form-control" required id="tags" asp-for="Tags" />
                <span class="text-danger" asp-validation-for="Tags"></span>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" id="isVisible" asp-for="AddBikeRouteRequest.Visible">
                <label class="form-check-label" for="isVisible">
                    Is Visible
                </label>
                <span class="text-danger" asp-validation-for="AddBikeRouteRequest.Visible"></span>

            </div>

            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Submit</button>
            </div>

        </form>
    </div>
</div>

